{% extends 'base.html.twig' %}

{% block title %}
	{{ parent() }}
	- Langages
{% endblock %}

{% block body %}
	<div id="index-language">
		<h1>//LANGAGES_</h1>
		<div id="index-cards">
			{% for language in languages %}
				<card id="{{language.label}}-card">
					<img src="{{ vich_uploader_asset(language) }}" alt="logo of " {{language.label}}>
					<h2>//{{language.label}}_</h2>
					<p>{{language.description}}</p>
					<a class="btn-glitch-fill" href="">
						<span class="text">//Catégories</span>
						<span class="text-decoration">_</span>
						<span class="decoration">&rArr;</span>
					</a>
				</card>
			{% endfor %}
			<card id="js-card">
				<img src="{{ asset('build/images/javascript-logo.eb9d2cb6.svg')}}" alt="logo of JavaScript">
				<h2>//JavaScript_</h2>
				<p>Apprends les bases du langage JavaScript</p>
				<a class="btn-glitch-fill" href="">
					<span class="text">//Catégories</span>
