{% extends 'base.html.twig' %}

{% block title %}User index{% endblock %}

{% block body %}
    <h1>User index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Username</th>
                <th>Lastname</th>
                <th>Firstname</th>
                <th>Birthdate</th>
                <th>Housenumber</th>
                <th>Streetname</th>
                <th>City</th>
                <th>Zipcode</th>
                <th>Country</th>
                <th>Mail</th>
                <th>Phonenumber</th>
                <th>Password</th>
                <th>Profilepicture</th>
                <th>Role</th>
                <th>Quizzresult</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.id }}</td>
                <td>{{ user.username }}</td>
                <td>{{ user.lastname }}</td>
                <td>{{ user.firstname }}</td>
                <td>{{ user.birthdate ? user.birthdate|date('Y-m-d') : '' }}</td>
                <td>{{ user.housenumber }}</td>
                <td>{{ user.streetname }}</td>
                <td>{{ user.city }}</td>
                <td>{{ user.zipcode }}</td>
                <td>{{ user.country }}</td>
                <td>{{ user.mail }}</td>
                <td>{{ user.phonenumber }}</td>
                <td>{{ user.password }}</td>
                <td>{{ user.profilepicture }}</td>
                <td>{{ user.role }}</td>
                <td>{{ user.quizzresult }}</td>
                <td>
                    <a href="{{ path('app_user_show', {'id': user.id}) }}">show</a>
                    <a href="{{ path('app_user_edit', {'id': user.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="17">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_user_new') }}">Create new</a>
{% endblock %}
