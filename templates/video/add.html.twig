{% extends 'base.html.twig' %}

{% block title %}TEST FORMULAIRE{% endblock %}

{% block body %}

<div id="preview">
    <div id="thumbnailPreview"></div>
    <div id="videoPreview"></div>
</div>

    <div id="form">
        {{ form_start(form) }}
        <fieldset class="form">
                <div id="upload_button">
                    {{ form_widget(form.thumbnailFile) }}
                    {{ form_widget(form.videoFile) }}
                </div>
                <div id="writing_field">
                    {{ form_widget(form.title) }}
                    {{ form_widget(form.description) }}
                </div>
        </fieldset>

        <div id="select_upload">
            <div name="language_select" class"select" id ="language_select">
                {{ form_widget(form.language) }}
            </div>

            <div name="category_select" class="select" id="category_select">
                {{ form_widget(form.category) }}
            </div>
        </div>

        <button class="btn-glitch-fill">
            <span class="text">//Valider</span>
            <span class="text-decoration">_</span>
            <span class="decoration">&rArr;</span>
        </button>
        {{ form_end(form) }}
    </div>

{% endblock %}

{% block javascripts %}
{{ encore_entry_script_tags('app') }}
{% endblock %}